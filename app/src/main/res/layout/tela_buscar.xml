<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#9ad3d5"
    android:orientation="vertical"
    android:weightSum="1">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="73dp"
        android:orientation="horizontal"
        android:weightSum="1">

        <Button
            android:id="@+id/btnVoltar"
            android:layout_width="112dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="<"
            android:textSize="24sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="128dp"
        android:layout_weight="0.49"
        android:orientation="vertical"
        android:weightSum="1">

        <EditText
            android:id="@+id/labelCargo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.13"
            android:ems="10"
            android:inputType="textPersonName"
            android:text="QUAL CARGO VOCÃŠ PROCURA?"
            android:textAlignment="center"
            android:textColor="#47525E"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/txtCargo"
            android:layout_width="260dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="0.17"
            android:background="@android:color/white"
            android:hint="Ex: Administrador"
            android:maxLines="1" />

        <EditText
            android:id="@+id/labelCidade"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.15"
            android:ems="10"
            android:inputType="textPersonName"
            android:text="QUAL CIDADE/ESTADO?"
            android:textAlignment="center"
            android:textColor="#47525E"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/txtCidade"
            android:layout_width="260dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="0.18"
            android:background="@android:color/white"
            android:hint="Ex: Brasilia"
            android:maxLines="1" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="125dp"
        android:orientation="vertical">


        <Button
            android:id="@+id/btnBuscar"
            android:layout_width="127dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="40dp"
            android:text="Buscar" />
    </LinearLayout>

</LinearLayout>