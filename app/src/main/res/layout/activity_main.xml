<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#9ad3d5"
    android:orientation="vertical"
    android:weightSum="1"
    tools:context="st.mape.jobs.MainActivity">

    <TextView
        android:id="@+id/txtName"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.32"
        android:gravity="center_vertical|center"
        android:text="Jobs"
        android:textColor="#47525E"
        android:textSize="48dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.64"
        android:orientation="vertical"
        android:weightSum="1">

        <EditText
            android:id="@+id/txtMail"
            android:layout_width="359dp"
            android:layout_height="63dp"
            android:layout_gravity="center"
            android:layout_marginBottom="6dp"
            android:background="#FFFAFA"
            android:ems="10"
            android:inputType="textEmailAddress"
            android:text="Usuário ou e-mail" />

        <EditText
            android:id="@+id/txtPass"
            android:layout_width="359dp"
            android:layout_height="63dp"
            android:layout_gravity="center"
            android:layout_marginBottom="24dp"
            android:background="#FFFAFA"
            android:ems="10"
            android:inputType="textPassword"
            android:text="password" />

        <Button
            android:id="@+id/btnEnter"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="5dp"
            android:text="ENTRAR" />

        <TextView
            android:id="@+id/txtOp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_vertical|center"
            android:layout_margin="5dp"
            android:text="Ou entre com:" />

    </LinearLayout>

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:orientation="horizontal"
        android:layout_weight="0.05">

        <ImageView
            android:id="@+id/btnGoogle"
            android:layout_width="168dp"
            android:layout_height="61dp"
            app:layout_constraintBottom_toBottomOf="@+id/btnFB"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@+id/btnFB"
            app:layout_constraintTop_toTopOf="@+id/btnFB"
            app:layout_constraintVertical_bias="1.0"
            app:srcCompat="@drawable/google"
            tools:layout_constraintBottom_creator="1"
            tools:layout_constraintLeft_creator="1"
            tools:layout_constraintRight_creator="1"
            tools:layout_constraintTop_creator="1" />

        <ImageView
            android:id="@+id/btnFB"
            android:layout_width="176dp"
            android:layout_height="61dp"
            android:layout_marginEnd="22dp"
            android:layout_marginRight="22dp"
            android:layout_marginTop="-69dp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="parent"
            app:srcCompat="@drawable/fb"
            tools:layout_constraintRight_creator="1"
            tools:layout_constraintTop_creator="1" />
    </android.support.constraint.ConstraintLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="77dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/txtCad"
            android:layout_width="155dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|center"
            android:layout_marginLeft="80dp"
            android:gravity="center_horizontal"
            android:text="Ainda não cadastrado?"
            android:textColor="#47525E" />

        <TextView
            android:id="@+id/txtCad2"
            android:layout_width="91dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|center"
            android:text="Cadastre-se"
            android:textColor="#1E90FF" />
    </LinearLayout>

</LinearLayout>
